<h1>Welcome <%= current_user.name %></h1>
Current Balance : <%= current_user.coins %></br>
<button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Tansfer Coins</button>

<!-- Modal -->
<div id="myModal" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Transfer Coins</h4>
      </div>
      <div class="modal-body">
        <form action="/transfer" method="post">
  	      <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">

          <label for="dest">Send to</label>
          <input type="email" id="dest" name="email" class="form-control" placeholder="Enter email">

          <label for="amount">Amount</label>
          <input id="amount" name="amount" class="form-control" placeholder="0">
          <br/>

          <button type="submit" class="btn btn-primary">Submit</button>
  	    </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>

  </div>
</div>
